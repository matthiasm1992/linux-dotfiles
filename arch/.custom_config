# Custom Aliases
alias usys="sudo pacman -Syu --needed --noconfirm && yay -Syu --needed --noconfirm"
alias pi="sudo pacman -S --needed --noconfirm"
alias ps="pacman -Ss"
alias yi="yay -S --needed --noconfirm"
alias ys="yay -Ss"
alias rb="reboot"
alias po="systemctl poweroff"
alias spo="sudo systemctl poweroff"
alias nc="nordvpn connect London"
alias nd="nordvpn disconnect"
alias ns="nordvpn status"
alias sw="shotwell"
alias utar="tar xvf"
alias ff="fastfetch"
# Custom Aliases
alias usys="sudo apt update && sudo apt upgrade -y"
alias aupd="sudo apt update"
alias aupg="sudo apt upgrade -y"
alias ai="sudo apt install"
alias ar="sudo apt remove"
alias as="apt search"
alias ap="sudo apt purge"
alias nc="nordvpn connect"
alias nd="nordvpn disconnect"
alias ns="nordvpn status"
alias po="systemctl poweroff"
alias spo="sudo systemctl poweroff"
alias rb="reboot"
alias srb="sudo reboot"
alias ff="fastfetch"
alias sw="shotwell"
alias utar="tar xvf"
alias lsvr="live-server --port=1337"